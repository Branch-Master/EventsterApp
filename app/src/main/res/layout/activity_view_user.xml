<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ViewUserActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/viewuser_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/viewuser_card_name_label"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/viewuser_card_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/viewuser_card_email_label"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/viewuser_card_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/viewuser_card_bday_label"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="Birthday"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/viewuser_card_bday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/viewuser_card_zodiac_label"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="Zodiac Sign"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/viewuser_card_zodiac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/viewuser_card_phone_label"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/viewuser_card_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/viewuser_card_info_label"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="Info"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/viewuser_card_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />

            </TableRow>

            <FrameLayout
                android:id="@+id/show_users_container_"
                android:layout_width="match_parent"
                android:layout_height="360dp">

            </FrameLayout>


        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />


</RelativeLayout>