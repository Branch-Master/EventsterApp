<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/customborder"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/group_card_img"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/group_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/group_card_info_label"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:text="Group info"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/group_card_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/group_card_vis_label"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:text="Group visability"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/group_card_vis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableRow>

</LinearLayout>